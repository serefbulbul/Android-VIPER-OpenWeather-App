<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="720">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="20"
        android:useLevel="false">

        <gradient
            android:centerColor="@color/circular_progressbar_center_color"
            android:centerY="0.50"
            android:endColor="@color/circular_progressbar_end_color"
            android:startColor="@color/circular_progressbar_start_color"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>